import java.io.*;
import java.util.*;

/**
 * @author amorales
 *
 */
public class FileLookahead {

	/**
	 * @param args
	 */
	public static void main(String[] args) 
			throws FileNotFoundException {
				Scanner fileReader = new Scanner (new File("src/input.txt"));
			double obcheckings = 1540.39;
			double obsavings = 1000.00;
			double obcreditcard = 549.20;
			
			while (fileReader.hasNextDouble()); {
				obcheckings += fileReader.nextDouble ();
			fileReader.close();
			
			}
		}
	}
